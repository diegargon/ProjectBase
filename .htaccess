RewriteEngine On
RewriteBase /

#NewsSearch
RewriteRule  ^es\/searchTag/(.*)$   app.php?module=NewsSearch&page=search&lang=es&searchTag=$1
RewriteRule  ^en\/searchTag/(.*)$   app.php?module=NewsSearch&page=search&lang=en&searchTag=$1
RewriteRule  ^es\/search$   app.php?module=NewsSearch&page=search&lang=es
RewriteRule  ^en\/search$   app.php?module=NewsSearch&page=search&lang=en&

#Newspage
RewriteRule  ^es\/news/([0-9]+)/([0-9]+)/(.*)$   app.php?module=Newspage&page=news&lang=es&nid=$1&npage=$2 [NC]
RewriteRule  ^en\/news/([0-9]+)/([0-9]+)/(.*)$   app.php?module=Newspage&page=news&lang=en&nid=$1&npage=$2 [NC]
RewriteRule  ^es\/submitnews$   app.php?module=Newspage&page=submitnews&lang=es [NC]
RewriteRule  ^en\/submitnews$   app.php?module=Newspage&page=submitnews&lang=en[NC]

#SMBasic
RewriteRule  ^es\/login$   app.php?module=SMBasic&page=login&lang=es
RewriteRule  ^en\/login$   app.php?module=SMBasic&page=login&lang=en
RewriteRule  ^es\/logout$   app.php?module=SMBasic&page=logout&lang=es
RewriteRule  ^en\/logout$   app.php?module=SMBasic&page=logout&lang=en
RewriteRule  ^es\/profile(.*)$   app.php?module=SMBasic&page=profile&lang=es$1
RewriteRule  ^en\/profile(.*)$   app.php?module=SMBasic&page=profile&lang=en$1
RewriteRule  ^es\/register$   app.php?module=SMBasic&page=register&lang=es
RewriteRule  ^en\/register$   app.php?module=SMBasic&page=register&lang=en

RewriteRule ^(es|en)(.*)$  $2?lang=$1 [QSA]

